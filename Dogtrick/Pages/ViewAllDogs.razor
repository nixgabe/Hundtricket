@page "/ViewAllDogs/{memberId}"
@attribute [Authorize(Roles = "Registered")]

<h3>ViewAllDogs</h3>

<button @onclick="() => AddDog()">Add dog</button>

<div>
    <table>
        <thead>
            <th>Dogs</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var dog in Dogs)
            {

                <tr>
                    <MudButton Variant="Variant.Filled" @onclick="() => DogProfile(dog.Id)"><p>@dog.Name is @dog.Age years old. Of breed @dog.Breed</p></MudButton>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
